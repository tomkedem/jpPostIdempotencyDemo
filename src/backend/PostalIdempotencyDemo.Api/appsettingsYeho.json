{
  "ConnectionStrings": {    
    "DefaultConnection": "Server=tcp:localhost,1433;Database=PostalIdempotencyDemo;Integrated Security=True;Encrypt=True;TrustServerCertificate=True;MultipleActiveResultSets=True"
  },
  "IdempotencySettings": {
    "DefaultTtlHours": 24,
    "CleanupIntervalMinutes": 60,
    "MaxCacheSize": 10000
  },
  "ChaosEngineering": {
    "Enabled": true,
    "DefaultFailureRate": 0.0,
    "DefaultDelayMs": 0,
    "MaxDelayMs": 10000
  },
  "NetworkSimulation": {
    "EnableNetworkIssues": false,
    "MinDelayMs": 100,
    "MaxDelayMs": 3000,
    "FailurePercentage": 10,
    "TimeoutMs": 5000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://localhost:4200"
    ]
  }
}
